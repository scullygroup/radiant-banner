<% include_stylesheet 'admin/application' %>

<h1>Banners</h1>

<div id="new-page">
  <p><%= link_to "#{image_tag ("admin/icons-small/add.png")} Add New Banner", '/admin/banners/new' %></p>
</div>

<% for banner in @banners %>
    <h2 class="content-title"><%=h banner.title %></h2>
    
	<div class="content-links">
		<ul>
		  <li><%= link_to "#{image_tag ("admin/icons-small/ok.png", :border =>0, :title => 'Images')}Images", banner_show_url(:id => banner.id) %></li>
			<li><%= link_to "#{image_tag ("admin/icons-small/edit.png", :border =>0, :title => 'Edit')}Edit", banner_edit_url(:id => banner.id) %></li>
			<li><%= link_to "#{image_tag ("admin/icons-small/delete.png", :border =>0, :title => 'Delete')}Delete", banner_remove_url(:id => banner.id), :confirm => "Are you sure?" %></li>
		<ul>
	</div>
<% end %>